=cut

use strict;
use warnings;
use Netspoc::Compiler::Pass2;

# VERSION: inserted by DZP::OurPkgVersion
my $program = 'Netspoc';
my $version = __PACKAGE__->VERSION || 'devel';

Netspoc::Compiler::Pass2::compile(\@ARGV);
